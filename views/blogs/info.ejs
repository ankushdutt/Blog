<%- include('../partials/header') %>
<div class="header-wrapper">
<section class="hero-top">
	<div class="header">
	<!-- navigation links -->
	<div class="header-nav">
		<nav class="nav">
		<div class="nav-center">
			<a class="nav-item" href="/">
			<b>Home</b>
			</a>
			<%if(!currentUser){%>
			<a class="nav-item" id="regbutton">
				<b>Sign-Up/Login</b>
			</a>
			<%} else{%>
			<a class="nav-item" href="/blogs/new">
				<b>New Blog</b>
			</a>
			<a class="nav-item" href="/logout">
				<b>Sign Out</b>
			</a>
			<a class="nav-item -end">
				<b>Welcome <%=currentUser.username%></b>
			</a>
			<%}%>
		</div>
		</nav>
	</div>
	<!-- end of navigation links -->
	<!-- header titles -->
	<div class="header-title">
		<section class="hero is-medium has-text-centered">
		<div class="hero-body">
			<div class="container">
			<h1 class="title is-1"><%=blog.title%></h1>
			<h3 class="subtitle is-3">The Daily Awesome</h3>
			<h6 class="subtitle is-6">Posted by <b><%=blog.author.username%></b> on April 7th 2017 at 9:33pm</h6>
			</div>
		</div>
		</section>
	</div>
	<!-- end of header titles -->
	</div>
</section>
</div>


<div class="main-content">
	<div class="container">
		<div class="columns is-centered is-multiline has-text-centered">
			<div class="column is-6">
				<img src="<%=blog.image%>" alt="">
				<p style="text-align:justify; padding-top: 20px;"><%=blog.body%></p>
			</div>
		</div>
	</div>
</div>
	<center>
		<%if(currentUser && blog.author.id.equals(currentUser._id)) {%>
		<hr width="43%">
		<span style="display: inline-flex;">
			<form action="/blog/<%=blog._id%>/edit/">
				<button class="button is-warning is-outlined" style="margin-right: 50px;">Edit</button>
			</form>
			<form action="/blog/<%=blog._id%>?_method=DELETE" method="POST">
				<button class="button is-danger is-outlined">Delete</button>
			</form>
		</span>
		<%}%>
	</center>

<hr/>
<%- include('../partials/footer') %>